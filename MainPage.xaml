                <Button HeightRequest="100" WidthRequest="100" BackgroundColor="LightBlue" 
                        BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" BackgroundColor="LightBlue" 
                        BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
